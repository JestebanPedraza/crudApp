<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="15dp"
    android:layout_height="wrap_content"
    tools:context=".Detalles">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:contentPaddingBottom="@dimen/cardview_compat_inset_shadow"
        app:cardBackgroundColor="#DBEAE2"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="DETALLES DE DATOS" />

        <TextView
            android:id="@+id/edtitulo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:hint="Digita Título"
            android:inputType="textPersonName"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/edgenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:hint="Digita Género"
            android:inputType="textPersonName"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/edanio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="50dp"
            android:hint="Digita Año"
            android:inputType="textPersonName"
            android:textSize="25dp" />



    </androidx.cardview.widget.CardView>


</LinearLayout>